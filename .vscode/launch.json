{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "env": { "PYTHONPATH": "${workspaceRoot}/src", "AWS_DEFAULT_REGION": "ap-southeast-2"},
            "console": "integratedTerminal"
        },
        {
            "name": "Installer verify",
            "type": "python",
            "request": "launch",
            "program": "src/installer.py",
            "args": [
                "verify"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Installer init",
            "type": "python",
            "request": "launch",
            "program": "src/installer.py",
            "args": [
                "init", "--cpack-prefix", "NZ1"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Installer test",
            "type": "python",
            "request": "launch",
            "program": "installer/test.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Lambda Scan",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "env": {
                "CWL_CMK_ID": "alias/cwl"
            }
        }
    ]
}